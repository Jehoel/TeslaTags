<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:TeslaTags.Gui"
	
	mc:Ignorable="d"
	x:Class="TeslaTags.Gui.MainWindow"
	DataContext="{Binding Source={StaticResource Locator}, Path=MainWindow}"
	
	Title="TeslaTags"
	Height="450"
	Width="800"
>
	<Window.Resources>
		<SolidColorBrush x:Key="gl" Color="#FFCCCCCC" />
		<Style TargetType="{x:Type TextBlock}" x:Key="numCol">
			<Setter Property="HorizontalAlignment" Value="Right" />
			<Setter Property="Margin" Value="5,0,10,0" />
		</Style>
		<Style TargetType="{x:Type TextBlock}" x:Key="txtCol">
			<Setter Property="Margin" Value="5,0,10,0" />
		</Style>
	</Window.Resources>
	
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>


		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<Label Grid.Column="0" Margin="3" Content="Music root" />
			<TextBox Grid.Column="1" VerticalAlignment="Center" Margin="3" IsEnabled="{Binding IsNotBusy}" Text="{Binding DirectoryPath}"  />

			<StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
				<Button Margin="3" Width="75" Content="Browse..." Name="browseButton" />
				<Button Margin="3" Width="75" Content="Start" Command="{Binding StartCommand}" />
				<Button Margin="3" Width="75" Content="Stop" Command="{Binding StopCommand}" />
			</StackPanel>

		</Grid>

		<ProgressBar Grid.Row="1" Height="20" Margin="3" Minimum="0" Maximum="1" Value="{Binding ProgressPerc}" IsIndeterminate="{Binding ProgressIndeterminate}" />

		<DataGrid
			Grid.Row="2"
			ItemsSource="{Binding DirectoriesProgress}"
			HorizontalGridLinesBrush="{StaticResource gl}"
			VerticalGridLinesBrush="{StaticResource gl}"
			AutoGenerateColumns="False"
		>
			<DataGrid.Columns>
				<DataGridTextColumn Header="Directory"      Binding="{Binding DisplayDirectoryPath}"  ElementStyle="{StaticResource txtCol}" />
				<DataGridTextColumn Header="Total files"    Binding="{Binding TotalFiles}"            ElementStyle="{StaticResource numCol}" />
				<DataGridTextColumn Header="Files modified" Binding="{Binding FilesModified}"         ElementStyle="{StaticResource numCol}" />
				<DataGridTextColumn Header="Folder type"    Binding="{Binding FolderType}"            ElementStyle="{StaticResource txtCol}" />
				<DataGridTextColumn Header="Warnings"       Binding="{Binding Warnings.Count}"        ElementStyle="{StaticResource numCol}" />
				<DataGridTextColumn Header="Errors"         Binding="{Binding Errors.Count}"          ElementStyle="{StaticResource numCol}" />
			</DataGrid.Columns>

			<DataGrid.RowDetailsTemplate>
				<DataTemplate>
					<StackPanel Margin="50,10,10,10">
						
						<Label Content="Warnings" />
						<DataGrid ItemsSource="{Binding Warnings}" MaxHeight="150" AutoGenerateColumns="False">
							<DataGrid.Columns>
								<DataGridTextColumn Header="File" Binding="{Binding DisplayFileName}" />
								<DataGridTextColumn Header="Message" Binding="{Binding Message}" />
							</DataGrid.Columns>
						</DataGrid>
						
						<Label Content="Errors" />
						<DataGrid ItemsSource="{Binding Errors}" MaxHeight="150" AutoGenerateColumns="False">
							<DataGrid.Columns>
								<DataGridTextColumn Header="File" Binding="{Binding DisplayFileName}" />
								<DataGridTextColumn Header="Message" Binding="{Binding Message}" />
							</DataGrid.Columns>
						</DataGrid>
					</StackPanel>
					
					
				</DataTemplate>
			</DataGrid.RowDetailsTemplate>
			
		</DataGrid>
		
	</Grid>
	
</Window>
 